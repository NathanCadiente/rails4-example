<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :role => 'form', :class => 'form-horizontal'}) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-5 round-box devise">
        <div class="modal-header devise">  
          <h3 class="modal-title devise"><%= t('button.resend_confirm') %></h3> 
        </div>  
      
        <div class="modal-body">
          <%= devise_error_messages! %>
        
          <div class="form-group">
            <label for="inputEmail1" class="col-md-2 control-label devise"><%= t('label.email') -%></label>
            <div class="col-md-10">
              <%= f.email_field :email, class: "form-control", id: "inputEmail1", placeholder: t('label.email_example').downcase %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <br />
              <%= f.submit t('button.resend_confirm'), class: "btn btn-success" %>
            </div>
          </div>
        </div>
        <div class="modal-footer devise">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
