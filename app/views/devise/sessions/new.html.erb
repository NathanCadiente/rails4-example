<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'form-horizontal'}) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-5 round-box devise">
        <div class="modal-header devise">  
          <h3 class="modal-title devise"><%= t('menu.login') %></h3> 
        </div>  
      
        <div class="modal-body">
          <%= devise_error_messages! %>
        
          <div class="form-group">
            <label for="inputUsername1" class="col-md-4 control-label devise"><%= t('label.username') -%></label>
            <div class="col-md-8">
              <%= f.text_field :username, class: "form-control", id: "inputUsername1", placeholder: t('label.username').downcase %>
            </div>
          </div>
                  
          <div class="form-group">
            <label for="inputPassword1" class="col-md-4 control-label devise"><%= t('label.password') -%></label>
            <div class="col-md-8">
              <%= f.password_field :password, class: "form-control", id: "inputPassword1", placeholder: t('label.password').downcase %>
            </div>
          </div>
          
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <div class="col-lg-offset-4 col-lg-8">
                <div class="checkbox">
                  <label class="devise">
                    <%= f.check_box :remember_me %> <%= t('label.remember_me') -%>
                  </label>
                </div>
              </div>
            </div>
          <% end -%>
                
          <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
              <br />
              <%= f.submit t('button.login'), class: "btn btn-success" %>
            </div>
          </div>
        </div>
        <div class="modal-footer devise">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
