exclude_paths:
  - db/migrate

UnusedPrivateMethod:
  enabled: false # doesn't take into account controller callback statements

IrresponsibleModule:
  # documentation - later
  enabled: false

TooManyStatements:
  max_statements: 15

DuplicateMethodCall:
  max_calls: 3

NestedIterators:
  max_allowed_nesting: 2
