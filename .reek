exclude_paths:
  - db/migrate

IrresponsibleModule:
  # documentation - later
  enabled: false

TooManyStatements:
  max_statements: 15

DuplicateMethodCall:
  max_calls: 3

NestedIterators:
  max_allowed_nesting: 2

RepeatedConditional:
  max_ifs: 3

"app/controllers":
  NestedIterators:
    max_allowed_nesting: 2
  UnusedPrivateMethod:
    enabled: false
  InstanceVariableAssumption:
    enabled: false
"app/helpers":
  IrresponsibleModule:
    enabled: false
  UtilityFunction:
    enabled: false
